<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context=".NewGroupActivity">


    <ImageButton
        android:id="@+id/imageBtn_crocodile"
        android:layout_width="135dp"
        android:layout_height="135dp"
        app:srcCompat="@drawable/grp_crocodilexml"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="390dp" />

    <Button
        android:id="@+id/group_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#3E3E3E"
        android:text="등록"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="575dp" />

    <ImageButton
        android:id="@+id/imageBtn_snake"
        android:layout_width="135dp"
        android:layout_height="135dp"
        app:srcCompat="@drawable/grp_snakexml"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="391dp" />

    <Button
        android:id="@+id/imageBtn_lizard"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:drawableTop="@drawable/grp_lizardxml"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="219dp" />

    <ImageButton
        android:id="@+id/imageBtn_turtle"
        android:layout_width="135dp"
        android:layout_height="135dp"
        app:srcCompat="@drawable/grp_turtlexml"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="220dp" />

    <TextView
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 등록"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/group_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/login_edit_text"
        android:hint="  그룹 이름 입력"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GroupName"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="182dp" />


</androidx.constraintlayout.widget.ConstraintLayout>